/**index.wxss**/

page {
  background-color: #fff;
}

.container {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-family: "iconfont" !important;
  background: #fff;
}

/**内容**/

.content_wrap {
  width: 100%;
  height: auto;
}

.content_scroll {
  width: 100%;
  height: auto;
}

.content_main {
  width: 100%;
  height: 95px;
  background: #fff;
  /* border-radius: 4px; *//* margin-bottom: 14px; */
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.content_main .content_flex1 {
  margin-left: 25rpx;
  margin-right: 29rpx;
  width: 142rpx;
  height: 142rpx;
  font-size: 11px;
  color: #858585;
}

.content_main .content_flex1 image {
  width: 142rpx;
  height: 142rpx;
  border-radius: 4px;
}

.content_main .content_flex2 {
  flex: 70%;
  font-size: 11px;
  /* padding: 2px 5px; */
  color: #6c6c6c;
}

.content_flex2 .txt3 {
  color: #6c6c6c;
  font-size: 12px;
  margin-bottom: 8px;
}

.content_flex2 .txt1 {
  color: #040504;
  font-size: 14px;
  margin-bottom: 8px;
}

.fontcolor {
  color: red;
  font-weight: bold;
}

.activity_icon {
  width: 23rpx;
  height: 23rpx;
  display: inline-block;
}

.chooseClass {
  padding: 5rpx 20rpx;
  font-size: 25rpx;
}

.chooseClass .classinfo {
  padding: 5rpx;
}

.button {
  text-align: center;
  height: 80rpx;
  width: 300rpx;
  color: white;
  font-size: 30rpx;
  background-color: #27a938;
}

.publish_comment{
  position:fixed;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 23rpx 20rpx;
  background-color: #fff;
  bottom: -1rpx;
  box-sizing:border-box;
}

.red {
  background-color: #ff0000;
}
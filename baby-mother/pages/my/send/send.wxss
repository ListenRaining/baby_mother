page {
  background-color: #ffffff;
}

.nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: solid 5rpx #f2f2f2;
}

.tab {
  height: 80rpx;
  width: 140rpx;
  font-size: 30rpx;
  color: rgb(139, 139, 139);
  display: flex;
  align-items: center;
  text-align: center;
  /* XXX 两个像素的偏差，不然有视觉误差*/
  margin-bottom: -3rpx;
  justify-content: space-around;
}

.underline {
  color: #5fb157;
  border-bottom: solid 5rpx #5fb157;
}

.lists {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.list {
  padding:30rpx 0 30rpx 0;
  display: flex;
  width: 100%;
  align-items: center;
  border-bottom:1rpx solid #ebebeb;

}

.icon {
  width: 234rpx;
  height: 150rpx;
  border-radius: 15rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.info {
  width: 50%; 
  display: flex;
  font-size: 25rpx;
  align-items: center;
  flex-direction: column;
  justify-content: space-around; 
}

.limc {
  width: 15%;
  display: flex;
  font-size: 30rpx;
  align-items: center; 
  flex-direction: column; 
  justify-content: space-around; 
}


.btn {
  margin-left: auto;
  border-radius: 10rpx;
   background-color: rgb(95, 177, 87); 
  width: 200rpx;
   height: 60rpx; 
  font-size: 25rpx;
  color: rgb(255, 255, 255);
  /* line-height: 1.2; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.info_rol {
  margin-bottom: 10rpx;
}


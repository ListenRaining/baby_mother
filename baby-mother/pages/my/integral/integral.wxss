/* integral.wxss */

page {
  background-color: #f0eff5;
}

.content {
  margin-top: 32rpx;
  background-color: white;
  min-height: 1150rpx;
}

.head {
  height: 223rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.head .text {
  padding-top: 70rpx;
  font-size: 30rpx;
}

.head .integral {
  color: #32ad6a;
  font-size: 50rpx;
  padding-top: 26rpx;
  font-weight: bold;
}

.center {
  position: relative;
}

.button {
  height: 67rpx;
  display: flex;
  justify-content: flex-end;
}

.button text {
    font-size: 28rpx;
  line-height: 67rpx;
}

.icon {
  width: 25rpx;
  height: 20rpx;
  margin-top: 23.5rpx;
  margin-right: 41rpx;
}

.record {
  width: 100%;
  min-height: 70rpx;
  border-top: 1px solid #d5d5d5;
  display: flex;
  align-items: center;
  padding: 0 21rpx;
  box-sizing: border-box;
}

.record text {
  font-size: 30rpx;
  line-height: 30rpx;
}

#number {
  color: #32ad6a;
  padding: 0 4rpx;
}

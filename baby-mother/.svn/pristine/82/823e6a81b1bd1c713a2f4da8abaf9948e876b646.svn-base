@import "../../../utils/wxParse/wxParse.wxss";

.body{
  background-color: #ffffff;
}

.content_bg image {
  width: 100%;
}

.input_con {
  box-sizing: border-box;
  padding: 37rpx 0;
  border-bottom: 1rpx solid #dededc;
}

.input_con .title {
  display: block;
  float: left;
  font-size: 26rpx;
  height: 26rpx;
  line-height: 26rpx;
  color: #000;
  font-weight: bold;
  margin-left: 32rpx;
}

.input_con .content {
  display: block;
  float: left;
  margin-left: 29rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  color: #000;
}

.activity_icon {
  width: 23rpx;
  height: 23rpx;
  display: inline-block;
}

.content_old {
  font-size: 22rpx;
  text-decoration: line-through;
  color: #000;
}

.input_con .name {
  flex: 75%;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}

.input_con .sign_cnt {
  flex: 25%;
  height: 30rpx;
  font-size: 27rpx;
  line-height: 30rpx;
  float: right;
  color: #000;
  width: none;
  margin-right: 32rpx;
}

.input_con .cost {
  color: red;
}

.address {
  width: 100%;
  float: left;
  display: block;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #000;
}

.title_con {
  padding: 35rpx 0;
  border-bottom: 1rpx solid #dededc;
}

.activity {
  border: none;
}

.activity .content {
  clear: both;
  margin: 0;
  float: none;
}

.content_list {
  overflow: hidden;
  margin-bottom: 57rpx;
}

.submit_form {
  margin: 8rpx 0 20rpx 0;
}

.submit_form .button {
  height: 90rpx;
  width: 687rpx;
  background: #3db049;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
}

.selectIns {
  height: 40rpx;
  line-height: 40rpx;
  width: 200rpx;
  background: #3db049;
  color: #fff;
  text-align: center;
}

.address {
  /* box-sizing: border-box;  */
  display: flex;
  height: 89rpx;
  flex-direction: row;
  width: 100%;
  align-items: center;
  border-bottom: 1rpx solid #dededc;
}

.map {
  height: 30rpx;
  width: 30rpx;
  margin-left: 32rpx;
}

.address_text {
  margin-left: 21rpx;
  width: 500rpx;
}

.direct {
  width: 150rpx;
  text-align: center;
  color: #3daf4d;
  font-size: 28rpx;
  border: 1rpx solid #3daf4d;
  border-radius: 12rpx;
  line-height: 28rpx;
  padding: 10rpx 0;
  margin-right: 32rpx;
}

.content_item {
  display: flex;
  height: 90rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #dededc;
}

.content_item_name {
  display: flex;
  align-items: center;
  width: 500rpx;
  font-size: 32rpx;
  margin-left: 32rpx;
}

.content_item_name text {
  max-width: 500rpx;
}

.content_item_name picker {
}

.input_con_title_con_nums {
  margin-right: 32rpx;
}

input_con_title_con_name text {
}

.select_icon {
  height: 30rpx;
  width: 30rpx;
}
.video{
  margin-top: 20px;
  width:100%;
}

.float_con {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #f7f7fa;
  display: flex;
}

.float_btn button{
  position: absolute;
  right: 0;
  text-align: center;
  height: 100rpx;
  width: 50%;
  line-height: 100rpx;
  color: white;
  font-size: 30rpx;
  background-color: #ff6f06;
  border-radius: 0;
}

.float_icon {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 50%;
  font-size: 20rpx;
  color: #27a938;
}

.float_kf {
  text-align: center;
}

.float_wx {
  text-align: center;
  /*margin-left: -70rpx;*/
}

.float_wx2 {
  text-align: center;
}

.float_pyq {
  text-align: center;
}

.icon_btn {
  border-radius: 0;
  border: 1rpx solid #f7f7fa;
  height: 75rpx;
  width: 60rpx;
  text-align: center;
  padding-left:0;
  padding-right: 46rpx;
  line-height: 49rpx;
}

.float_kf image {
  position: absolute;
  width: 47rpx;
  height: 70rpx;
}

.float_wx image {
  width: 54rpx;
  height: 70rpx;
}

.float_wx2 image {
  width: 54rpx;
  height: 70rpx;
}

.float_pyq image {
  width: 54rpx;
  height: 70rpx;
}

.float_btn {
  width: 50%;
}

.float_txt {
  margin-top: -4rpx;
}

button::after{
  border: none;
}

.zhezhao {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}

.show {
  display: none;
  text-align: center;
  position: fixed;
  top: 45%;
  left: 20%;
  width: 60%;
  height: 19%;
  padding: 8px;
  border: 1px solid #e8e9f7;
  background-color: white;
  z-index: 1002;
  overflow: auto;
}
.txt{
  margin-top: 26rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  text-align: center;
}

.authorization{
  border-top: 1rpx solid #e1e1e1;
  margin-top:52rpx;
  font-size: 34rpx;
  color: royalblue;
  background: none !important;
}

.authorization::after{
  border: none;
}
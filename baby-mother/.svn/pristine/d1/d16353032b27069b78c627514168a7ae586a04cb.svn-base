/* pages/product/send_detail.wxss */
page {
  background-color: #ffffff;
}

.title {
  padding-top: 20rpx; 
  font-size: 26rpx;
  display: flex;
  justify-content: center; 
  align-items: center;
}

.name {
  color: #0000ff;
  padding: 0 10rpx;
  font-size: 30rpx;
}

.icon {
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.vpic {
  text-align: center;
  margin-top: 50rpx; 
}

.pic {
  border-radius: 10rpx;
  width: 510rpx;
  height: 350rpx;
  margin: 0 120rpx;
}

.product {
  padding-top: 40rpx;
  font-size: 30rpx;  
  text-align: center;
}

.price {
  color: #ff0000;
  text-decoration-line: line-through;
  padding: 20rpx 0rpx;
}

.zy_info {
  width: 100%;
  border-bottom: 1rpx solid #ebebeb;
  height: 170rpx;
  margin-top: 10rpx;
  text-align: center;
}

.zy_con {
  width: 315rpx;
  padding-left: 30%;
  padding-top:15rpx;
  font-size: 25rpx;
  color: #bbbbbb;
}

.zy_des {
  display: flex;
  width: 100%;
  text-align: center;
  justify-content: space-between;
  height: 50rpx;
}

.zy_left {
  width: 45%;
  height: 1rpx;
  background: #ebebeb;
  margin-top: 18rpx;
}

.zy_txt {
  font-size: 27rpx;
  color: #bbbbbb;
}

.zy_right {
  width: 45%;
  height: 1rpx;
  background: #ebebeb;
  margin-top: 18rpx;
}

.sendnow {
  margin-top: 80rpx;
  margin-left: auto;
  border-radius: 10rpx;
  background-color: rgb(95, 177, 87);
  width: 650rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  line-height: 1.2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recive {
  text-align: center;
  padding-bottom: 20rpx;
  font-size: 26rpx;
}

.classinfo {
  border-top:1rpx solid #ebebeb;
  padding-top: 10rpx; 
  width: 100%;
  height: 50rpx;
  text-align: center;
}

.ctitle {
  font-size: 26rpx;
  padding: 10rpx 0 20rpx 0;
  color: #bbbbbb;
}

.ins {
  font-size: 28rpx;
  color: #aabb00;
  padding-bottom: 20rpx;
}
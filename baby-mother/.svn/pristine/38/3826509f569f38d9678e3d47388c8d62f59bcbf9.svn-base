/* pages/classinfo/classinfo.wxss */

page {
  background-color: white;
  height: auto;
}

.view_bg {
  height: 1rpx;
  background-color: #e2e2e2;
}

.info {
  border-bottom: 2rpx solid #e2e2e2;
  padding-bottom: 20rpx;
}

.info_des {
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
  margin:20rpx 40rpx 0 40rpx;
}

.info_bg {
  width:750rpx;
  height: 157rpx;
  display: block;
}

.info_head {
  width: 131rpx;
  height: 131rpx;
  position: absolute;
  top:40rpx;
  left:300rpx;
  border-radius:65rpx;
}

.com {
  padding-top: 45rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e2e2e2;
}

.nocom {
  text-align: center;
  padding-top: 200rpx;
  font-size: 30rpx;
}

.com_list {
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  padding-bottom: 35rpx;
  line-height: 31rpx;
}

.com_list label {
  margin-left: 65rpx;
}

.com_img {
  display: flex;
  vertical-align:middle;
}

.com_img image {
  width:26rpx;
  height: 31rpx;
  line-height: 31rpx;
  margin-right: 25rpx;
}

.sum {
  margin:20rpx 40rpx 20rpx 40rpx;
  font-size: 30rpx;
}

.sum_js {
  width: 100%;
  height: 220rpx;
  margin-top: 20rpx;
  border: solid 2rpx #e2e2e2;
}

.btn {
  margin:40rpx;
  height: 80rpx;
  background-color: #5fb157;
  color: white;
  font-size: 30rpx;
}

.com_py {
  font-size: 25rpx;
  margin-top:15rpx;
}

.tyty {
  margin-top:40rpx;
}

.comment_bg {
  margin-top: 100rpx;
  height: 262rpx;
  position: absolute;
}

.comment_bg2 {
  position: absolute;
  bottom: 0;
}

.comment_image {
  width: 750rpx;
  height: 262rpx;
  display: block;
}

.picker {
  display: flex;
}

.content_picker {
  display: flex;
}

.select_icon {
  display: flex;
}

.select_icon image{
  padding-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.confirm {
  width: 175rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  font-size: 30rpx;
  background-color:#5fb157;
  color:#fff;
  margin: 10rpx 40rpx 10rpx 0;
}

.act{
  padding-left: 40rpx; 
  text-decoration: underline;
}
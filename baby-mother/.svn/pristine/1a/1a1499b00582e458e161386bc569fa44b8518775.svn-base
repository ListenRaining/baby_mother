/* pages/my/task/homework.wxss */
page {
  background-color: #ffffff; 
}

.logo image{
  margin: 25rpx; 
  width: 700rpx;
  height: 350rpx;
  border-radius: 15rpx;
}

.logo {
  background-color: #f7f7f7;
}

.head_cnt {
  position: absolute;
  width: 100%;
  color: white;
  top: 40rpx;
  font-size: 30rpx;
  text-align: center;
}

.cnt_num {
  font-size: 40rpx;
  font-weight: 800;
}

.head_cnt view {
  margin-bottom: 10rpx;
}

.head image{
  width: 100%;
}

.task_a {
  display: flex;
  margin-bottom: 15rpx; 
  height: 300rpx;
}

.task_l{
  height: 210rpx;
  width: 28%;
  margin-left: 20rpx;
}

.task_l image {
  padding-top:40rpx;
  width: 100%;
  height: 100%;
}

.task_r {
  width: 72%;
  padding: 40rpx;
}

.task_r .t_ti {
  font-size: 28rpx;
  font-weight: 600;
  text-align: left;
  padding-bottom: 20rpx;  
}

.task_r .t_c {
  font-size: 25rpx;
  color: #cfcfcf;
}

.content {
  padding: 25rpx;
  background-color: #f7f7f7;
}

.content image{
  width: 100%;
}

.tmusic {
  width: 700rpx;
  margin-top: 50rpx; 
  margin-bottom: 50rpx; 
  padding-left: 40rpx;
}

.incomplete {
  background-color: #ffffff; 
}

.incomplete image{
  width: 154rpx;
  height: 202rpx;
  margin: 50rpx 0 50rpx 298rpx;  
}

.complete {
  height: 75rpx;
  width: 550rpx;
  margin-left: 100rpx;
  margin-bottom: 30rpx; 
}

.video {
  width: 700rpx;
}

.imageNode{ 
    padding: 25rpx 0 28rpx  0;
    /* min-height: 432rpx; */
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content:flex-start;
}

.addImage{
    width: 190rpx;
    height: 190rpx;
}

.addImageOther{
    width: 190rpx;
    height: 190rpx;
    margin-left: 40rpx;
}

.imageView
{
    position: relative;
    margin-bottom: 40rpx;
}
.imageView image{
     width: 190rpx;
     height: 190rpx; 
     padding: 20rpx;
}
icon{
    position: absolute;
    left: 170rpx;
}


.submit{
    height: 80rpx;
    line-height: 80rpx;
    background-color: #3fa734;
    color: #fff;
    width: 70%;
    margin-bottom: 30rpx; 
}


.contribute{
    display: block;
    margin-top: 25rpx;
}

checkbox{
    transform:scale(.7);
    border-radius: 5rpx;
    outline: none;
}
.contribute{
    display: flex;
    color: #aaaaaa;
    align-items: center;
}
.contribute label
{
    color: #000;
    margin-right: 20rpx;
    font-size: 23rpx;
}

.content textarea{
  width: 93%;
  font-size: 26rpx;
  padding: 25rpx;  
  border-bottom: 2rpx solid #f7f7f7;
  margin-bottom: 20rpx; 
  height: 120rpx;
  background-color: #ffffff; 
}

/* action_sheet.wxss */

.commentDel{
    position:fixed;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    width:100%;
    height:100%;
    background-color: #000;
    padding: 100rpx 100rpx;
    box-sizing: border-box;
    background-color: rgba(0,0,0,0.5);
}

.item{
    display: flex;
    padding: 0 50rpx;
    align-items: center;
    width: 400rpx;
    height: 80rpx;
    border-bottom: solid 1rpx #efeef3;
    background-color: #fff;
    border-radius: 5rpx;
    font-size: 30rpx;
    /* opacity: 1; */
}


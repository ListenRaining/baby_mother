page{
  background-color: #ffffff;
}

.star {
  width: 16rpx;
}

.content_wrap {
  padding: 0 40rpx;
}

.menu_wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  padding: 14rpx 0;
}

.menu_wrap .item {
  position: relative;
  width: 100%;
  margin-top: 20rpx;
  font-size: 25rpx;
}

.menu_wrap .item .label {
  font-size: 25rpx;
  color: #e93b3b;
}

.menu_wrap .item .category{
  margin-top: 10rpx;
}

.menu_wrap .item .category label{
  margin-left: 16rpx;
}

.menu_wrap .item .content {
  width: 100%;
  height: 43rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
  border: solid 1rpx #959595;
  border-radius: 10rpx;
}

.menu_wrap .item .content_picker {
  width: 100%;
  height: 48rpx;
  margin-top: 13rpx;
  padding-left: 10rpx;
  border: solid 1rpx #959595;
  border-radius: 10rpx;
}

.menu_wrap .item .content .picker {
  margin-top: 5rpx;
  height: 100%;
  color: #959595;
}

.menu_wrap .item .content_picker .picker {
  margin-top: 8rpx;
  height: 100%;
  color: #959595;
}

.menu_wrap .item image {
  position: absolute;
  right: 8rpx;
  top: 64rpx;
}

.menu_wrap .age_wrap {
  display: flex;
  flex-direction: column;
}

.menu_wrap .age_wrap .radio_wrap {
  display: flex;
  margin-top: 28rpx;
}

.menu_wrap .age_wrap .radio_wrap radio {
  transform: scale(0.7);
}

.addImg_wrap {
  display: flex;
  padding-top: 32rpx;
  flex-direction: column;
  font-size: 28rpx;
}

.addImg_wrap .image_wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.addImg_wrap .image_wrap image {
  position: relative;
  width: 189rpx;
  height: 190rpx;
  flex-shrink: 0;
  margin-bottom: 20rpx;
}

.addImg_wrap .image_wrap image icon {
  position: absolute;
  top: 0;
  right: 0;
}

button {
  height: 80rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  font-size: 28rpx;
  line-height: 90rpx;
  color: #fff;
  background-color: #5fb157;
}

.rx{
  margin-left:40rpx;
}

.js {
  width: 100%;
  height: 220rpx;
  margin-top: 17rpx;
  padding-left: 10rpx;
  border: solid 1rpx #959595;
  border-radius: 10rpx;
}

.hint_content {
  padding: 0 40rpx;
}

.hint_content view{
  letter-spacing:0rpx;
  font-size: 30rpx;
  margin-top: 60rpx;
}

.mandatory{
  color:red;
  font-size: 24rpx;
  margin-left: 6rpx;
}
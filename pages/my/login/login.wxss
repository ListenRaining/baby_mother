.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #ffffff;
  position: relative;
}
.container .bg{
  height:100vh;
  width:100%;
}
.container button{
  position: absolute;
  bottom: 160rpx;
  left: 50%;
  width: 584rpx;
  height: 80rpx;
  background: #00c66b;
  border-radius: 26rpx;
  margin-left:-292rpx;
  color:#ffffff;
  line-height: 80rpx;
  font-size: 30rpx;
}
.container button image{
  width: 57rpx;
  height: 46rpx;
  vertical-align: middle;
}
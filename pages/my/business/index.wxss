.header{
  width: 100%;
  height: 350rpx;
  background: #987672;
  background: url('https://act.fableedu.com/public/small/busin_banner.png') no-repeat 100% 100%;
  font-size: 28rpx;
}
.header_view{
  padding-left: 25rpx;
  padding-top: 35rpx;
}
.user_poster{
  display: inline-block;
  width: 69rpx;
  height: 69rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align:middle;
  
}
.user_poster image{
  width: 100%;
  max-height: 100%;
}
.user_poster~text{
  color: #ffffff; 
  padding-left: 14rpx;
}

.img_box{
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 8rpx;
  box-shadow: 0 0 0 9rpx rgba(255,250,250,0.4)
}
.img_box image{
  width: 100%;
  max-height: 100%;
  background: #ffffff;
}
.img_money .money{
  text-align: center;
  color: #ffffff;
  padding-top: 25rpx;
}

.section{
  background: #ffffff;
  margin-top: 20rpx;
}
.section1{
  height: 540rpx;
}
.title{
  font-size: 28rpx;
  border-bottom: 2rpx solid #e9e9e9;
  font-weight: 800;
  line-height: 64rpx;
  margin: 0 25rpx;
}
.section1_box{
  margin-top: 17rpx;
  height: 438rpx;
}

.scroll_box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #ffffff;
  white-space: nowrap;
}

 .scroll_box .item_lists {
  width: 700rpx;
  height: 434rpx;
  margin: 0 20rpx 0 0;
  display: inline-block;
  clear: both;
  overflow: hidden;
  border-radius: 20rpx;
  border: 2rpx solid #e9e9e9;
}
.scroll-view_x{
  width: auto;
  overflow:hidden;
  margin-left:20rpx;
  height: 100%;
}
.item_book_imgs{
  height: 350rpx;
  position: relative;
}
.scroll_box image{
  width: 100%;
  height: 100%;
}
.item_book_imgs .money{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 138rpx;
  height: 63rpx;
  background: rgba(255,250,250,0.6);
  color: #ce2c2c;
  font-size: 36rpx;
  text-align: center;
  line-height: 63rpx;
  font-weight: 600;
  padding: 0 8rpx;
}



.send text{
  font-size: 28rpx;
  font-weight: 800;
  padding-left: 30rpx;
  line-height: 88rpx;
}
.send view{
  float: right;
  width: 152rpx;
  height: 66rpx;
  border-radius: 10rpx;
  background: #41a638;
  text-align: center;
  line-height: 66rpx;
  margin-top: 11rpx;
  color: #ffffff;
  margin-right: 16rpx;
}

.section2{
  width: 100%;
  height: 610rpx;
}
.tab{
  padding-left: 56rpx;
  margin-top: 35rpx;
}
.tab view{
  display: inline-block;
  width: 146rpx;
  height: 44rpx;
  border: 2rpx solid #b6b6b6;
  border-radius: 26rpx;
  margin-right: 90rpx;
  text-align: center;
  line-height: 44rpx;
}
.tab view:last-child{
  margin-right: 0;
}
.echarts_box{
  width: 100%;
  height: 76%;
  margin-top: 20rpx;
}

.section3{
  height: 170rpx;
  /* width: 100%;  
  position: fixed;
  bottom: 0; */
}
.img1{
  width: 50rpx;
  height: 50rpx;
}
.img2{
  width: 50rpx;
  height: 46rpx;
}
.img3{
  width: 50rpx;
  height: 43rpx;
}
.section3 .item{
  margin-top: 40rpx;
  display: inline-block;
  width: 33%;
  text-align: center;
}
.alert{
  width: 100%;
  height: 257rpx;
  background: #ffffff;
  position: fixed;
  bottom: 0;
  z-index: 2;
  overflow-y: scroll;
}
.alert_img1{
  width: 50rpx;
  height: 40rpx;
  margin-left: -6rpx;
  /* vertical-align: middle; */
  margin-top: 26rpx;
}
.alert_img2{
  width: 70rpx;
  height: 27rpx;
  margin-left: -22rpx;
  /* vertical-align: middle; */
  
}
.alert_item{
  display: inline-block;
  margin-top: 52rpx;
  width: 50%;
  text-align: center;
}
.alert_box{
  width: 94rpx;
  height: 94rpx;
  border: 2rpx solid #97da6f;
  border-radius: 50%;
  margin: 0 auto;
}
.alert_box::after{
  border:none;
}

.t_view{
  padding-top: 20rpx;
}

.shadow{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000000;
  opacity: 0.6;
}
.none{
  display: none;
}

.tab .active{
  border: 2rpx solid #63b35c;
  color: #60b158;
}
page{
  background-color: #ffffff;
}

.content_wrap {
  padding: 0 30rpx;
}

.menu_wrap {
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
}

.item {
  position: relative;
  width: 100%;
  margin-top: 12rpx;
  font-size: 34rpx;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
  border-bottom-color: #ebebeb;
}

.image {
  position: relative;
}

.head{
  width:100%;
}

.wrap_content {
  display: flex;
  margin-bottom: 10rpx;
}

.content_picker {
  width:630rpx;
  height: 50rpx;
  //margin-top: 20rpx;
  padding-left: 10rpx;
  margin-right: 20rpx;
  border: solid 1rpx #959595;
  border-radius: 10rpx;
}

.menu_wrap .content_picker .picker {
  height: 100%;
  color: #959595;
}

.submit {
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 34rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #5fb157;
}

.publish_comment{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 23rpx 20rpx;
  background-color: #fff;
  bottom: -1rpx;
  box-sizing:border-box;
}

.operation {
  text-align: center;
  height: 80rpx;
  width: 220rpx;
  color: white;
  font-size: 30rpx;
  background-color: #27a938;
}

.addImg_wrap {
  display: flex;
  padding-top: 20rpx;
  flex-direction: column;
  font-size: 32rpx;
}

.addImg_wrap .image_wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.addImg_wrap .image_wrap image {
  position: relative;
  width: 600rpx;
  flex-shrink: 0;
  margin-bottom: 20rpx;
}

.addImg_wrap .image_wrap image icon {
  position: absolute;
  top: 0;
  right: 0;
}
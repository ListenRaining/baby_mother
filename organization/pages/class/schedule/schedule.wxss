/* pages/class/schedule/schedule.wxss */

.nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: solid 5rpx #f2f2f2;
}

.tab {
  height: 80rpx;
  width: 140rpx;
  font-size: 30rpx;
  color: rgb(139, 139, 139);
  display: flex;
  align-items: center;
  text-align: center;
  /* XXX 两个像素的偏差，不然有视觉误差*/
  margin-bottom: -3rpx;
  justify-content: space-around;
}

.underline {
  color: #5fb157;
  border-bottom: solid 5rpx #5fb157;
}

.lists {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.list {
  margin:30rpx 0 30rpx 0;
  display: flex;
  width: 100%;
  align-items: center;
}

.icon {
  width: 128rpx;
  height: 125rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.info {
  display: flex;
  font-size: 25rpx;
  align-items: center;
  flex-direction: column;
  justify-content: space-around;
}

.btn {
  margin-right: 30rpx;
  margin-left: auto;
  border-radius: 10rpx;
  background-color: rgb(95, 177, 87);
  width: 150rpx;
  height: 45rpx;
  font-size: 25rpx;
  color: rgb(255, 255, 255);
  line-height: 1.2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.info_rol {
  width: 100%;
  margin-bottom: 5rpx;
}

.left_text {
  width: 112rpx;
}

.class_status {
  width: 72rpx;
}

/* 上课中 */
.in_class_status {
  color: #5fb157;
  width: 72rpx;
}

/* 今日 */
.today_status {
  color: rgb(239, 59, 59);
  width: 72rpx;
}

/* 招生中 */
.in_admissions {
  color: rgb(239, 156, 59);
  width: 72rpx;
}

/* 审核中 */
.in_audit {
  width: 72rpx;
  color: rgb(67, 156, 225);
}

.item_nosch {
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #a4a7aa;
  padding-top: 200rpx;
}

.item_nosch image {
  margin-bottom: 40rpx;
}

.nosch_txt {
  color: #5fb157;
}

.noClass{
  font-size:26rpx;
}
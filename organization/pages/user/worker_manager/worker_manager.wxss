/* pages/user/worker_manager/worker_manager.wxss */

page {
  background-color: #f2f2f2;
}

.form {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  margin-top: 30rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.input_panel {
  border-width: 1rpx;
  border-color: rgb(149, 149, 149);
  border-style: solid;
  border-radius: 10rpx;
  width: 668rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.input_panel input {
  width: 668rpx;
  height: 43rpx;
  font-size: 26rpx;
  padding-left: 20rpx;
}

.impower {
  background-color: #31aa39;
  border-radius: 10rpx;
  width: 668rpx;
  height: 80rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.worker_list {
  display: flex;
  margin-top: 30rpx;
  background-color: white;
  font-size: 22rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
  flex-direction: column;
  align-items: center;
}

.worker_info {
  height: 86rpx;
  display: flex;
  align-items: center;
}

.content {
  width: 676rpx;
  display: flex;
  font-size: 25rpx;
  justify-content: space-between;
}

.title{
  font-size: 26rpx;
}

.workder_info{
  font-size: 22rpx;
}

.impower_del {
  background-color: rgb(218, 59, 49);
  width: 140rpx;
  height: 45rpx;
  border-radius: 10rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* pages/login/login.wxss */
page{
  height: 100%;
}
.content_wrap {
  background-image:url('http://act.fableedu.com/public/login_bg.jpg?id=1');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  height: 100%;
}

.form {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding-top: 60rpx;
}

.input_panel {
  border-width: 1rpx;
  border-style: solid;
  border-radius: 10rpx;
  border-color: #818181;
  width: 468rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.input_panel2 {
  border-width: 1rpx;
  border-style: solid;
  border-radius: 10rpx;
  border-color: #818181;
  width: 224rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input_code {
  width:468rpx;
  display: flex;
  margin: 30rpx 0ch;
}

.form input {
  height: 43rpx;
  width:468rpx;
  font-size: 25rpx;
  padding-left: 20rpx;
}

.input_panel .code {
  width: 268rpx;
  height: 43rpx;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.input_code .getcode {
  width: 224rpx;
  height: 60rpx;
  font-size: 25rpx;
  /* margin-right: 20rpx; */
  border-radius:10rpx;
  border-width: 1rpx;
  border-style: solid;
  border-color: #1dad4b;
  color:#1dad4b;
  text-align:center;
  line-height: 60rpx;
  margin-left:20rpx;
}

.impower {
  background-color: #31aa39;
  border-radius: 10rpx;
  width: 468rpx;
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  margin-top: 30rpx;
}

.worker_list {
  display: flex;
  margin-top: 30rpx;
  font-size: 22rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
  flex-direction: column;
  align-items: center;
}

.worker_info {
  height: 86rpx;
  display: flex;
  align-items: center;
}

.content {
  width: 676rpx;
  display: flex;
  font-size: 25rpx;
  justify-content: space-between;
}

.title{
  font-size: 26rpx;
}

.workder_info{
  font-size: 22rpx;
}

.impower_del {
  background-color: rgb(218, 59, 49);
  width: 140rpx;
  height: 45rpx;
  border-radius: 10rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content_head {
  padding-top:100rpx;
}

.content_logo {
  display: flex;
  justify-content: center;
}

.content_logo .img{
  width: 366rpx;
  height: 142rpx;
}

.content_txt {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  color: #1dad4b;
  font-size: 30rpx;
}

.form_txt {
  margin-top: 40rpx;
  font-size: 28rpx;
  color:#7ebd6b;
}

.zhezhao {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}

.show {
  display: none;
  text-align: center;
  position: absolute;
  top: 45%;
  left: 20%;
  width: 53%;
  height: 20%;
  padding: 8px;
  border: 8px solid #e8e9f7;
  background-color: white;
  z-index: 1002;
  overflow: auto;
}
.txt{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: royalblue
}

.authorization{
  margin-top:30rpx;
}
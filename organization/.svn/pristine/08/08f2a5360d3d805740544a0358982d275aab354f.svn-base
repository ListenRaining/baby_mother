/* pages/teamwork/information.wxss */

/* 个人信息 */
.person_content{
  display: flex;
  flex-direction: column;
  font-family: "PingFangSC";
}

.person_top_text{
  width: 100%;
  height: 50rpx;
  background-color: #dfe3ed;
  padding-left: 35rpx;
  line-height: 50rpx;
  color: #A5A9AF;
  font-size: 24rpx;
 
}

.person_li{
  width: 680rpx;
  height:90rpx; 
  margin-left: 35rpx;
  padding-left: 5rpx;
  display: block;
  align-items: center;
  padding: 35rpx 33rpx;
  border-bottom: solid 1rpx #d5d5d5;
}
 .person_title{
  width: 165rpx;
  height:90rpx; 
  line-height: 90rpx;
  display: block;
  font-size: 30rpx;
  float: left
}

.person_Number{
  width: 505rpx;
  height:90rpx; 
  line-height: 90rpx;
  display: block;
  /* color: #afb5ca; */
  font-size: 30rpx;
  float: left
}

 .person_button{
   position: absolute;
   left: 35rpx;
   bottom: 3rpx;
  height:80rpx;
  width: 680rpx;
  margin-left: 36rpx;
  background:#27a938;
  color:#fff;
  text-align:center;
  line-height:80rpx;
  font-size: 34rpx;
  font-family: "PingFangSC";
  margin:22px 0 0 0
}

.phcolor{
    color: #afb5ca;
}





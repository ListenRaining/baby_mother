.activity_wrap {
  display: flex;
  flex-direction: column;
  border-top: solid 1rpx #ebebeb;
  padding: 25rpx 92rpx 25rpx 42rpx;
  font-size: 28rpx;
}

.activity_wrap .item {
  margin-bottom: 28rpx;
}

.activity_wrap .act_type {
  display: flex;
  align-items: center;
}

.activity_wrap .act_type picker {
  padding: 0;
  margin-left: 10rpx;
  margin-top: -5rpx;
  box-sizing: border-box;
  width: 420rpx;
  height: 43rpx;
  border: solid 1rpx #959595;
  border-radius: 10rpx;
}

.activity_wrap .act_type picker .picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
  padding-left: 10rpx;
  font-size: 25rpx;
  color: #ad9d9b;
}

.picker .arrow{
  position: absolute;
  right: 105rpx;
  top:38rpx;
}

.activity_wrap .act_type picker .picker .arrow {
  margin-right: 25rpx;
}

.arrow {
  width: 23rpx;
}

.arrow_right {
  width: 15rpx;
}

.fold_controller {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.fold_controller .arrow {
  margin-left: 10rpx;
}

.form {
  margin-top: 27rpx;
  padding: 27rpx 40rpx;
  border-top: solid 1rpx #ebebeb;
}

.form form {
  font-size: 29rpx;
}

.form form .menu {
  display: flex;
  position: relative;
  width: 670;
  height: 43rpx;
  margin-top: 30rpx;
  align-items: center;
}

.form form .menu .item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  padding-left: 10rpx;
  font-size: 25rpx;
  color: #ad9d9b;
  border: solid 1rpx #959595;
  border-radius: 10rpx;
}

.form form .menu .item .picker {
  width: 650rpx;
  height: 100%;
}

.form form .menu image {
  position: absolute;
  right: 20rpx;
}

.form form textarea {
  box-sizing: border-box;
  padding: 12rpx;
  margin-top: 57rpx;
  width: 100%;
  height: 300rpx;
  border: solid 1rpx #959595;
  font-size: 25rpx;
}

.form form button {
  margin-top: 58rpx;
  margin-bottom: 70rpx;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  background-color: #38b549;
}

.form form input {
  width: 100%;
}

.content {
  text-align: center;
}
